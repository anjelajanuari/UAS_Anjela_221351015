<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Gambar sebagai background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/kapal"
        android:contentDescription="Background" />

    <!-- Overlay konten utama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/sonar"
            android:contentDescription="Logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SONAR MINE"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memprediksi sinyal sonar dengan akurasi tinggi"
            android:textColor="#DDDDDD"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnMasukAplikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Masuk Aplikasi"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFA500"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </LinearLayout>
</FrameLayout>
