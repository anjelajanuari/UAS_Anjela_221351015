<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sonarmine">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Sonar Mine Classifier"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SonarMine">

        <!-- ✅ SplashActivity jadi launcher (halaman awal) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- ✅ Tambahkan aktivitas lainnya -->
        <activity android:name=".MainActivity" />
        <activity android:name=".AboutUsActivity" />
        <activity android:name=".DatasetActivity" />
        <activity android:name=".FiturActivity" />
        <activity android:name=".ModelActivity" />
        <activity android:name=".SimulasiActivity" />

    </application>

</manifest>
